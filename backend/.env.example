# ============================================================
# Telegram Bot Configuration
# ============================================================

# Токен вашего Telegram бота
# Получить можно у @BotFather в Telegram
# Пример: 8586876585:AAHCnWNzopAY-xKsjcuJ_lvB6Y7UtD7txeo
BOT_TOKEN=your_bot_token_here

# Секретный ключ для валидации вебхуков
# Рекомендуется использовать случайную строку для безопасности
WEBHOOK_SECRET=your_webhook_secret_here

# ============================================================
# FastAPI Server Configuration
# ============================================================

# Хост для запуска API сервера
# 0.0.0.0 - доступен со всех интерфейсов (для ngrok)
# localhost - доступен только локально
API_HOST=0.0.0.0

# Порт для API сервера
API_PORT=8000

# CORS origins - разрешенные источники для запросов с фронтенда
# Разделяйте запятыми, используйте протоколы http/https
# Пример: http://localhost:5173,http://localhost:3000,https://yourdomain.com
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# ============================================================
# Database Configuration
# ============================================================

# URL подключения к базе данных
# Для SQLite: sqlite+aiosqlite:///./hrbot.db
# Для PostgreSQL: postgresql+asyncpg://user:password@localhost:5432/hrbot
# Для MySQL: mysql+aiomysql://user:password@localhost:3306/hrbot
DATABASE_URL=sqlite+aiosqlite:///./hrbot.db

# ============================================================
# HR Admin Configuration
# ============================================================

# Telegram IDs HR-сотрудников (разделены запятыми)
# Эти сотрудники смогут инициировать опросы и видеть результаты
# Пример: 123456789,987654321,456789123
HR_TELEGRAM_IDS=123456789,987654321

# ============================================================
# Bot Behavior Configuration
# ============================================================

# Время в минутах между напоминаниями о незавершенных опросах
# По умолчанию: 24 часа (1440 минут)
REMINDER_INTERVAL_MINUTES=1440

# Количество попыток отправки напоминаний
# По умолчанию: 3
MAX_REMINDER_ATTEMPTS=3
